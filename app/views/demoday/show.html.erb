<div class="container ">
  <h1 class="demoday-title">
    <%= t(".demoday_title") %>
  </h1>

  <div class="dropdown-section">
    <!-- Dropdown Language -->
    <div class="dropdown-container">
      <div class="dropdown">
        <button class="dropdown-batch dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
          <%= t(".dropdown.language") %>
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
          <li>
            <%= link_to "#" do %>
              <%= t(".dropdown.first_item") %>
              <%= render 'shared/english_flag' %>
            <% end %>
          </li>
          <li>
            <%= link_to "#" do %>
              <%= t(".dropdown.second_item") %>
              <%= render 'shared/french_flag' %>
            <% end %>
          </li>
          <li>
            <%= link_to "#" do %>
              <%= t(".dropdown.second_item") %>
              <%= render 'shared/brazilian_flag' %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
    <!-- Dropdown City -->
    <div class="dropdown-container">
      <div class="dropdown">
        <button class="dropdown-batch dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
          <%= t(".dropdown.batches") %>
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu dropdown-menu-city" aria-labelledby="dropdownMenu1">
          <li>
            <%= link_to "#" do %>
              Batch#43
              <small>Paris - Janv. / Mars 2016</small>
            <% end %>
          </li>
          <li>
            <%= link_to "#" do %>
              Batch#31
              <small>Bordeaux - Janv. / Mars 2016</small>
            <% end %>
          </li>
          <li>
            <%= link_to "#" do %>
              Batch#30
              <small>Paris - Janv. / Mars 2016</small>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <div class="player-container">
    <!-- Player Header -->
    <div class="player-header">
      <div class="batch-info">
        <span class="batch-flag">
          <%= render 'shared/french_flag' %>
        </span>
        <div class="batch-details">
          <span class="batch-name">Batch #30 <i>Paris</i></span>
          <span class="batch-date">June - August 2016</span>
        </div>
      </div>
      <div class="product-info">
        <i class="product-icon"><%= render 'shared/product_icon' %></i>
        <span class="product-details">
          11
          <i><%= t(".player.product")%></i>
        </span>
      </div>
    </div>
    <!-- Player Menu -->
    <div class="player-menu">
      <ul class="player-menu-summary">
        <li class="player-menu-item">Introduction</li>
        <li class="player-menu-item player-menu-item-active">Caddy Connect</li>
        <li class="player-menu-item">NetMeet</li>
        <li class="player-menu-item">Higher</li>
        <li class="player-menu-item">Dinja</li>
        <li class="player-menu-item">Zykout</li>
        <li class="player-menu-item">CoursMaPoule</li>
        <li class="player-menu-item">Revalue</li>
        <li class="player-menu-item">Katalog</li>
        <li class="player-menu-item">Happy Papy</li>
        <li class="player-menu-item">MediaClasse</li>
        <li class="player-menu-item">Super Festival</li>
      </ul>
    </div>
    <!-- Player Content -->
    <div class="player-content">
      <div class="player-video">
      </div>
      <div class="player-product">
        <div class="product-details">
          <ul class="product-team">
            <li><%= image_tag "hero/ssaunier.jpg", class: "team-member", with: "42px", height: "42px" %></li>
            <li><%= image_tag "hero/ssaunier.jpg", class: "team-member", with: "42px", height: "42px" %></li>
            <li><%= image_tag "hero/ssaunier.jpg", class: "team-member", with: "42px", height: "42px" %></li>
            <li><%= image_tag "hero/ssaunier.jpg", class: "team-member", with: "42px", height: "42px" %></li>
          </ul>
          <h3 class="project-name">Caddy Connect</h3>
          <span class="project-tagline">Manage your online purchases in one sight</span>
          <%= link_to t(".player.project_link"), "#", class: "project-link" %>
          <div class="project-techno">
            <span><%= t(".player.techno") %></span>
            <ul>
              <li><span><%= render "shared/icon_react" %><i>React</i></span></li>
            </ul>
          </div>
        </div>
        <div class="apply-cta">
          <span><%= t(".player.cta") %></span>
        </div>
      </div>
    </div>
  </div>

  <h2 class="demoday-title">
    <%= t(".batch_title") %>
  </h2>
</div>