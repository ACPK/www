<div class="<%= full_item ? ' dropdown full-item' : 'dropdown' %>">
  <a class='navbar-wagon-link-menu-wrapper' type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    <div class='navbar-wagon-link-menu'></div>
  </a>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
    <li class="<%= full_item ? 'main' : 'main hidden-md hidden-lg hidden-sm' %>">
      <%= link_to t(".menu.fullstack"), send(:"program_#{locale}_path") %>
    </li>
    <li class='main hidden-md hidden-lg hidden-sm'>
      <%= link_to t(".alumni", default: "Alumni"), alumni_path(locale: locale), locale: locale %>
    </li>
    <li class="<%= full_item ? 'main' : 'main hidden-md hidden-lg hidden-sm' %>">
      <%= link_to t(".menu.cities"),"#" %>
    </li>
    <% Static::CITIES.each do |slug, infos| %>
      <li class="<%= full_item ? '' : 'hidden-md hidden-lg hidden-sm' %>">
        <%= link_to infos[:name], city_path(city: slug, locale: locale) %>
      </li>
    <% end %>
    <li>
      <span class='flag-container'>
        <div>
          <%= link_to url_for(controller: params[:controller], action: params[:action], locale: :fr), style: ("opacity: .3" if locale == :en) do %>
            <%= render 'shared/french_flag' %>
          <% end %>
          <span class='separator'>/</span>
          <%= link_to url_for(controller: params[:controller], action: params[:action], locale: :en), style: ("opacity: .3" if locale == :fr) do %>
            <%= render 'shared/english_flag' %>
          <% end %>
        </div>
      </span>
    </li>
    <% if locale == :fr %>
      <li class='main'>
        <a href="https://ondemand.lewagon.org/?utm_medium=referral&utm_source=www.lewagon.com&utm_campaign=navbar_wagon" target='_blank'>
         Cours en ligne (On Demand)
        </a>
      </li>
      <li>
        <a href="https://ondemand.lewagon.org/tracks/codez-votre-premier-site-web/go?utm_medium=referral&utm_source=www.lewagon.com&utm_campaign=navbar_wagon" target='_blank'>  Codez votre premier site web
       </a>
      </li>
      <li>
        <a href="https://ondemand.lewagon.org/tracks/devenez-developpeur-front-end/go?utm_medium=referral&utm_source=www.lewagon.com&utm_campaign=navbar_wagon" target='_blank'>
         Devenez Front-end Developer
       </a>
      </li>
      <li>
       <a href="https://ondemand.lewagon.org/tracks/devenez-data-scientist/go?utm_medium=referral&utm_source=www.lewagon.com&utm_campaign=navbar_wagon" target='_blank'>
         Devenez Data-Scientist
       </a>
      </li>
      <li>
        <a href="https://ondemand.lewagon.org/tracks/comprenez-enfin-javascript/go?utm_medium=referral&utm_source=www.lewagon.com&utm_campaign=navbar_wagon" target='_blank'>
         Comprenez enfin Javascript
        </a>
      </li>
    <% end %>
    <li class='main'>
      <a href="/blog">
        Blog
      </a>
    </li>
    <li class='main'>
      <%= link_to 'FAQ', faq_path(locale: locale) %>
    </li>
  </ul>
</div>
