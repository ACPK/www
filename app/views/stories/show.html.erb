<div class="perpetua story-banner banner banner-top banner-gradient text-center" style="background: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('<%= @story["picture"]%>');">
  <div class="story-banner-content story-container">
    <h2><%= @story["title"][locale.to_s]  %></h2>
    <%= render 'user_infos', story: @story %>
  </div>
</div>

<div class='story-container'>
  <div class="story-body">
    <div class="story-company">
      <% if @story["company"] %>
        <img src="<%= @story["company"]["logo"]  %>" class="story-company-logo ">
      <% end %>
    </div>
    <%= @story['summary'][locale.to_s] %>
  </div>
</div>

<div class="stories-container">
  <div class="story-container popular-stories">
    Popular stories
  </div>
  <% @stories.each do |story| %>
    <div class="story-container">
    <div class="story-card">
      <main>
        <div class="story-card-title">
          <%= story["title"][locale.to_s]  %>
        </div>
        <div class="story-card-summary">
          <%= story['summary'][locale.to_s] %>
        </div>
        <div class='story-card-footer'>
          <%= render 'user_infos', story: story %>
          <div class='story-card-company'>
            <img src="<%= story["company"]["logo"]  %>" class="story-company-logo ">
          </div>
        </div>

      </main>
      <aside class='perpetua' style="background-image: url('<%= story["picture"]%>')">
      </aside>
      <%= link_to "", story_path(user_name: story["alumni"]["github_nickname"]), class: "story-nav-item-link" %>
    </div>
    </div>
  <% end %>
</div>

