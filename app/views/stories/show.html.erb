<div class="stories-navigation-wrapper">
  <div class="container">
    <div class="stories-navigation">
      <% @stories.each do |story| %>
        <div class="story-nav-item <%= @story == story ? 'active' : ''%>">
          <img src="<%= story["alumni"]["thumbnail"] %>" class="story-user-img">
          <h2><%= story["alumni"]["first_name"]  %> <%= story["alumni"]["last_name"]  %></h2>
          <p>
            <% if story["company"] %>
              Works for <img src="<%= story["company"]["logo"]  %>" class="story-company-logo ">
            <% end %>
          </p>
          <%= link_to "", story_path(user_name: story["alumni"]["github_nickname"]), class: "story-nav-item-link" %>
        </div>
      <% end %>
    </div>
  </div>
</div>




<div class="story-details-wrapper">
  <div class="container">
    <div class="story-details">
      <%= @story["description"][locale.to_s] %>
    </div>
  </div>
</div>
